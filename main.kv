#:kivy 2.3.0


<LoginWindow>:
    name: 'login'
    BoxLayout:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.9)
            Rectangle:
                pos: root.pos
                size: root.size
        orientation: 'vertical'
        size_hint: 0.75, 0.75
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        spacing: 15
        Label:
            text: 'Laboratory'
            font_size: 36
            bold: True
            color: (0.039, 0.729, 0.71)
            size_hint_y: None
            height: "100dp"
        TextInput:
            id: username
            hint_text: 'Логин'
            multiline: False
            font_size: 18
            write_tab: False
            size_hint_y: None
            height: self.minimum_height
            focus: True
            on_text_validate: root.login()
        TextInput:
            id: password
            hint_text: 'Пароль'
            password: True
            multiline: False
            font_size: 18
            write_tab: False
            size_hint_y: None
            height: self.minimum_height
            on_text_validate: root.login()
        Button:
            text: 'Вход'
            on_press: root.login()
            size_hint: None, None
            height: "30dp"
            width: "70dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: 18
        Label:
            id: error
            text: ''
            text_size: self.size
            halign: 'left'
            valign: 'top'
            color: (1, 0, 0)
            font_size: 16


<ListWindow>:
    name: 'list'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.9)
            Rectangle:
                pos: root.pos
                size: root.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: "60dp"
            padding: 10
            spacing: 10
            Button:
                size_hint_x: None
                width: "40dp"
                background_color: (0, 0, 0, 0)
                on_press: root.open_website()
                Image:
                    source: 'img/logo.png'
                    x: self.parent.x
                    y: self.parent.y
                    height: self.parent.height
                    width: self.parent.width
            TextInput:
                id: search_field
                hint_text: 'Поиск'
                text: ''
                background_color: (0, 0, 0, 0.1)
                font_size: 18
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_cursor: root.search()
            Button:
                id: fbutton
                size_hint_x: None
                width: "40dp"
                background_color: (0, 0, 0, 0)
                Image:
                    id: fimage
                    x: self.parent.x
                    y: self.parent.y
                    height: self.parent.height
                    width: self.parent.width
            Button:
                size_hint_x: None
                width: "40dp"
                background_color: (0, 0, 0, 0)
                on_press: root.logout()
                Image:
                    source: 'img/logout.png'
                    x: self.parent.x
                    y: self.parent.y
                    height: self.parent.height
                    width: self.parent.width
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                id: reagents_list
                size_hint_y: None
                height: self.minimum_height
